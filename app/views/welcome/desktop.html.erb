    <%= stylesheet_link_tag    'desktop', media: 'all' %>
    <%= javascript_include_tag 'desktop' %>
    <%= csrf_meta_tags %>
    
</head>
<body data-tuktuk="boxes">
    <aside id="timetable" class="absolute bck light column_4" style="opacity: 0.95;">
        <div>
        <header class="bck theme" style="opacity: 1;">
            <div class="session on-left">
                <h6 id="stationNameShow" class="text bold inline">Station Name</h6>
            </div>
            <a href="#" id="closeaside" data-box="close" class="on-right text big icon remove color white"></a>
        </header>
        <div class="anchor timetableindex inline bck dark">
                <div class="anchor timetablevalue"><span class='on-left margin-left'>Time    </span>Direction<a href="#" id="openTimeSettings" class='on-right icon time margin-right'></a></div>
        </div>
        <article class="bck dark scroll">
            <div class="timetablebox inline">
                <div class="anchor timetablevalue bck dark"><div id="loadingInfo">
                    <div id="loading_1" class="loading"></div>
                    <div id="loading_2" class="loading"></div>
                    <div id="loading_3" class="loading"></div>
                    <div id="loading_4" class="loading"></div>
                    <div id="loading_5" class="loading"></div>
                    <div id="loading_6" class="loading"></div>
                    <div id="loading_7" class="loading"></div>
                    <div id="loading_8" class="loading"></div>
                </div></div>
            </div>
        </article>
        </div>
    </aside>

    <aside id="time" class="absolute bck dark column_4" style="opacity: 0.95;">
        <div>
        <header class="bck theme" style="opacity: 1;">
            <div class="session on-left">
                <h6 id="stationNameShow" class="text bold inline">Station Name</h6>
            </div>
            <a href="#" id="closeTimeSettings" data-box="close" class="on-right text big icon remove color white"></a>
        </header>
        <article class="bck dark scroll">
            <label>From:</label><br>
            <input id="from_time" type="time" value="12:00"></input>
            <hr>
            <label>To:</label><br>
            <input id="to_time" type="time" value="12:30"></input>
        </article>
        </div>
    </aside>


    <section>
        <header class = "align center">
            <div id="buttonsmenu">
                <button id="asidebutton" class="on-left theme small icon arrow-right"></button>
                <button id="menuasidebutton" class="on-right small icon flag"></button>
            </div>
            <h3 id="title" class="align center text thin">Transit!</h3>
        </header>

        <article class="padding scroll">
            <div class="margin-bottom align center">
                <nav>
                    <a id="locateMe" class="button theme small"><span class="icon hand-up"></span>Locate me!</a>
                    <a class="button small"><span class="icon search"></span>Search</a>
                </nav>
            </div>
            <div id="map-canvas" class="light map"></div>
        </article>

        <footer class="bck dark text center" style="opacity: 0.8;">
            Made By <a href="http://github.com/muit" class="color theme text bold">Muit
            <span class="icon github"></span></a>
        </footer>
    </section>

    <div id="controlmenu" data-tuktuk="modal" data-modal="confirm" class="side column_3" style="opacity: 0.95;">
        <header class="bck theme">
            <strong>Transit</strong>
            <a href="#" id="closemenuaside" data-box="close" class="on-right text big icon remove color white"></a>
        </header>
        <article class="bck dark scroll">
            <nav class="align center text bold" data-tuktuk="menu">
                <a id="button_settings" href="#" class="active">Settings</a><br>
                <a id="button_contact" href="#">Contact</a><br>
                <a id="button_aboutMe" href="#">About me</a><br>
            </nav>
        </article>
        <footer class="bck dark text center">
            TukTuk by <a href="http://tapquo.com" class="color theme text bold">tapquo</a>
        </footer>
    </div>
    <div id="modal" data-tuktuk="modal" class="active column_5">
        <header>
            <h4 id="modalTitle" class="text book inline"></h4>
            <a href="#" id="modalClose" data-modal="close" class="on-right text big icon remove color white"></a>
        </header>
        <article id="modalMessage" class="bck dark">
        </article>
    </div>
    <script>
        TukTuk.Modal.loading();
        setTimeout( TukTuk.Modal.hide, 1000);
    </script>
</body>