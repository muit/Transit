[data-atoms=app]
  [data-atom-switch]
    RADIUS = 1rem
    border: none
    border-radius: RADIUS
    background-color: FORM_COLOR
    transition all ANIMATION_DURATION (ANIMATION_DURATION / 2) ANIMATION_EASE
    &:after
      background-color: lighten(BACKGROUND, 50%)
      border-radius: RADIUS
      transition left (ANIMATION_DURATION / 2) ANIMATION_EASE
    &:checked
      background-color: THEME
