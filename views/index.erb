<!doctype html>
<meta charset="UTF-8">
<html>
<head>
    <title>Transit</title>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>

    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="tuktuk/tuktuk.css">
    <link rel="stylesheet" href="tuktuk/tuktuk.theme.default.css">
    <link rel="stylesheet" href="tuktuk/tuktuk.icons.css">
    <style>
        body {
            background: #000 url(img/bg.jpg) no-repeat center center fixed; 
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
            box-shadow: inset 0 0 20px black;
        }
        #title{
            color: white;
            text-shadow: 1px 1px 5px white;
        }
        #map-canvas {
            background-color: #000;
            opacity: 0.7;
            height: 384px;
            margin-bottom: 2.5em;
            text-align: center;
        }
        .thumb {
            height: 96px;
            margin-bottom: 2.5em;
            text-align: center;
            line-height: 96px;
        }
        .column_4.thumb {
            height: 220px;
            line-height: 220px;
        }
        .timetable{
            background-color: rgba(0, 0, 0, 0.2);
            padding-top: 0.25em;
            padding-bottom:  0.25em;
            width: 100%;
        }
        .timetablevalue{
            margin-top : 0.25em;
            height: 32px;
            margin-bottom: 0.25em;
            text-align: center;
            line-height: 32px;
             
            margin-left: 0.25em;
            margin-right: 0.25em;
        }
        .map{
            width: 100%;
            margin-left: 0px;
            margin-right: 0px;
        }

        .buttonsMenu{
            position: absolute;
            top: 0px;
            left: 0px;
            width:100%;
        }
    </style>
    <script src="js/jquery-2.1.1.min.js"></script>
    <script src="js/main.js"></script>
    <script src="tuktuk/tuktuk.js"></script>
</head>
<body data-tuktuk="boxes">
    <aside id="timetable" class="absolute bck light column_3">
        <div>
        <header class="bck dark">
            <div class="session on-left">
                <strong><a href="#" class="color theme">Time Table:</a></strong>
            </div>
            <a href="#" id="closeaside" data-box="close" class="on-right text big icon remove color white"></a>
        </header>
        <article class="bck light scroll">

            <div class="margin-left margin-right">
                <h4 class="text bold color theme inline">Station Name</h4>
                <span class="margin-left tag bck color inline text bold">pro</span>
            </div>
            <hr>
            <div class="timetable inline">
                <div class="anchor timetablevalue bck light">table value</div>
                <div class="anchor timetablevalue bck light">table value</div>
                <div class="anchor timetablevalue bck light">table value</div>
                <div class="anchor timetablevalue bck light">table value</div>
                <div class="anchor timetablevalue bck light">table value</div>
                <div class="anchor timetablevalue bck light">table value</div>
            </div>
        </article>
        </div>
    </aside>

    <section>
        <header class = "align center">
            <div id="buttonsmenu">
                <button id="asidebutton" class="on-left theme small icon arrow-right"></button>
                <button id="menuasidebutton" class="on-right small icon flag"></button>
            </div>
            <h3 id="title" class="align center text thin">Transit<span class="tag bck theme">NEW!</span></h3>
        </header>

        <article class="padding scroll">
            <div class="margin-bottom align center">
                <nav>
                    <a href="#" id="locateMe" class="button theme small"><span class="icon hand-up"></span>Locate me!</a>
                    <a href="#" class="button small"><span class="icon search"></span>Search</a>
                </nav>
            </div>
            <div class="inside">
                <div id="map-canvas" class="column_9 light map"></div>
            </div>
        </article>

        <footer class="bck dark text center" style="opacity: 0.8;">
            Made By <a href="http://github.com/muit" class="color theme text bold">Muit</a>
        </footer>
    </section>

    <div id="controlmenu" data-tuktuk="modal" data-modal="confirm" class="side column_3">
        <header class="bck theme">
            <strong>Transit</strong>
            <a href="#" id="closemenuaside" data-box="close" class="on-right text big icon remove color white"></a>
        </header>
        <article class="bck dark scroll">
            <nav class="align center text bold" data-tuktuk="menu">
                <a href="#" class="active">Settings</a><br>
                <a href="#">Contact</a><br>
                <a href="#">About us</a><br>
            </nav>
        </article>
        <footer class="bck dark text center">
            TukTuk by <a href="http://tapquo.com" class="color theme text bold">tapquo</a>
        </footer>
    </div>
    <script>
        TukTuk.Modal.loading();
        setTimeout( TukTuk.Modal.hide, 1000);
    </script>
</body>
</html>